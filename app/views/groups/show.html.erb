<p id="notice"><%= notice %></p>
<p>
  <b>Name:</b>
  <%= @group.name %>
</p>
<p>
  <b>Description:</b>
  <%= @group.description %>
</p>
<p>
  <b>Label:</b>
  <%= @group.label %>
</p>
<p>
  <b>Is_public:</b>
  <%= @group.is_public %>
</p>
<p>
   <td><%= link_to 'Edit', edit_group_path(@group) %></td>
</p>
<h2>分类:</h2>
<table>
	<tr>
	<% @group.categories.each do |category| %>
    	<td><%= category.name %></td>
	<% end %> 
	</tr>   
</table>

<h2>Users:</h2>
<table>
<% @group.users.each do |user| %>
<tr>
    <td><%= user.name %></td>
    <td><%= user.position %></td>
    <td><%= user.icon_url %></td>
</tr>   
<% end %> 
</table>

<h2>所有评论:</h2>
<table>
<% @group.group_reviews.each do |group_review| %>
<tr>
    <td><%= group_review.id %></td>
    <td><%= group_review.context %></td>
</tr>   
<% end %> 
</table>
<h2>共有<%=@group.tasks.size %>个任务</h2>
<h2>所有任务:</h2>
<table>
<% @group.tasks.each do |task| %>
<tr>
    <td><%= task.id %></td>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= link_to "编辑", edit_task_path(task)%></td>
</tr>   
<% end %> 
</table>
<%= current_user.id%>
<%= link_to 'Add Task', edit_group_path(@group) %> 

